[tool.poetry]
name = "{{package_name}}"
version = "0.1.0"
description = "{{description}}"
authors = ["{{author}} <{{author_email}}>"]
readme = "README.md"
packages = [
    { include = "{{package_name}}", from = "src" },
]

[tool.poetry.dependencies]
python = "^3.{{min_python}}"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
